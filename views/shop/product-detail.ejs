<%- include('../partials/head.ejs') %>
</head>

<body>
  <%- include('../partials/navigation.ejs') %>
  <main class="centered">
    <h1><%= product.title %></h1>
    <hr>
    <div class="image">
      <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    </div>
    <h2>$<%= product.price %></h2>
    <p><%= product.description %></p>
    <% if (isAuthenticated) { %>
      <%- include('../partials/add-to-cart-form.ejs', { product: product }) %>
    <% } %>
  </main>
  <%- include('../partials/end.ejs') %>